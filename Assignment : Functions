practical_code = '''# 1. Function to sum all even numbers in a list
def sum_even_numbers(numbers):
    """Return sum of all even numbers in the list"""
    return sum(num for num in numbers if num % 2 == 0)

# Test
print("1. Sum of evens:", sum_even_numbers([1, 2, 3, 4, 5, 6]))  # 2+4+6 = 12

# 2. Function to reverse a string
def reverse_string(s):
    """Return the reverse of the input string"""
    return s[::-1]

# Test
print("2. Reverse of 'hello':", reverse_string("hello"))  # 'olleh'

# 3. Function to return squares of each number
def square_list(numbers):
    """Return new list containing squares of each number"""
    return [x**2 for x in numbers]

# Test
print("3. Squares:", square_list([1, 2, 3, 4]))  # [1, 4, 9, 16]

# 4. Function to check if a number is prime (1 to 200)
def is_prime(n):
    """Check if a number is prime (for numbers 1 to 200)"""
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

def check_prime_range():
    """Check all numbers from 1 to 200 and return primes"""
    primes = [n for n in range(1, 201) if is_prime(n)]
    return primes

# Test
print("4. Primes from 1-200:", check_prime_range()[:10], "...")  # First 10 primes

# 5. Iterator class for Fibonacci sequence
class FibonacciIterator:
    """Iterator that generates Fibonacci sequence up to specified terms"""
    def __init__(self, n_terms):
        self.n_terms = n_terms
        self.current = 0
        self.next = 1
        self.count = 0
    
    def __iter__(self):
        return self
    
    def __next__(self):
        if self.count >= self.n_terms:
            raise StopIteration
        if self.count == 0:
            self.count += 1
            return 0
        elif self.count == 1:
            self.count += 1
            return 1
        else:
            self.current, self.next = self.next, self.current + self.next
            self.count += 1
            return self.next

# Test
fib = FibonacciIterator(10)
print("5. Fibonacci (10 terms):", list(fib))

# 6. Generator function for powers of 2
def powers_of_two(max_exp):
    """Yield powers of 2 up to given exponent"""
    for i in range(max_exp + 1):
        yield 2 ** i

# Test
print("6. Powers of 2 (exp 0-5):", list(powers_of_two(5)))

# 7. Generator function to read file line by line
def read_file_lines(filename):
    """Generator that reads a file line by line"""
    try:
        with open(filename, 'r') as file:
            for line in file:
                yield line.strip()
    except FileNotFoundError:
        yield f"File {filename} not found"

# Note: This would require an actual file to test
print("7. File line reader generator created")

# 8. Sort list of tuples by second element using lambda
tuples_list = [(1, 3), (4, 1), (2, 2), (5, 0)]
sorted_list = sorted(tuples_list, key=lambda x: x[1])

print("8. Sorted by second element:", sorted_list)

# 9. Convert Celsius to Fahrenheit using map()
celsius_temps = [0, 20, 30, 40, 100]
fahrenheit_temps = list(map(lambda c: (c * 9/5) + 32, celsius_temps))

print("9. Celsius to Fahrenheit:")
for c, f in zip(celsius_temps, fahrenheit_temps):
    print(f"   {c}°C = {f}°F")

# 10. Remove vowels from string using filter()
def remove_vowels(text):
    """Remove all vowels from a string using filter"""
    vowels = 'aeiouAEIOU'
    return ''.join(filter(lambda char: char not in vowels, text))

# Test
sample_text = "Hello World! This is Python."
print("10. Original:", sample_text)
print("    Without vowels:", remove_vowels(sample_text))

# 11. Book shop accounting routine using lambda and map
orders = [
    [34587, "Learning Python, Mark Lutz", 4, 40.95],
    [98762, "Programming Python, Mark Lutz", 5, 56.80],
    [77226, "Head First Python, Paul Barry", 3, 32.95],
    [88112, "Einführung in Python3, Bernd Klein", 3, 24.99]
]

def process_orders(orders):
    """
    Returns list of tuples (order_number, total_price)
    Add 10€ if total < 100€
    """
    return list(map(
        lambda order: (
            order[0],  # order number
            order[2] * order[3] + (10 if order[2] * order[3] < 100 else 0)
        ),
        orders
    ))

# Process and display results
print("\n11. Book Shop Orders Processing:")
print("-" * 50)
result_orders = process_orders(orders)
for order_num, total in result_orders:
    print(f"Order #{order_num}: €{total:.2f}")
print("-" * 50)

# Additional explanation
print("\nExplanation: For each order, we calculate quantity × price per item")
print("If the total is less than €100, we add €10 to the total")
'''

